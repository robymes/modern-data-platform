{
  "name": "Python Development",
  "dockerComposeFile": "docker-compose.yml",
	"service": "main",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true
    }
  },
  "containerEnv": {
    "PYTHONPATH": "/usr/local/lib/python3.11/site-packages"
  },
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.analysis.extraPaths": [
      "/usr/local/lib/python3.11/site-packages"
    ],
    "python.venvPath": "/usr/local/venvs"
  },
  "postCreateCommand": "mkdir -p /usr/local/venvs && python -m venv /usr/local/venvs/myenv && /usr/local/venvs/myenv/bin/python -m pip install -r ${containerWorkspaceFolder}/requirements.txt",
  "postStartCommand": "echo 'source /usr/local/venvs/myenv/bin/activate' >> ~/.bashrc",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/venvs/myenv/bin/python"
      }
    }
  }
}